{% extends 'base.html.twig' %}

{% block title %}Services médicaux{% endblock %}

{% block body %}
<div class="row">
  <div class="col-12">

    <div class="card card-primary">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="card-title mb-0">Services médicaux</h3>

        {# Optionnel: bouton créer (page new) #}
        <a href="{{ path('app_service_medical_new') }}" class="btn btn-success">
          <i class="ri-add-line"></i> Nouveau service
        </a>
      </div>

      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered align-middle text-center mb-0">
            <thead class="table-light">
              <tr>
                <th>#</th>
                <th>Libellé</th>
                <th style="width: 160px;">Actions</th>
              </tr>
            </thead>

            <tbody>
            {% for s in service_medicals %}
              <tr>
                <td>{{ s.id }}</td>
                <td class="text-start">{{ s.libelle }}</td>

                <td>
                  <div class="d-flex gap-2 justify-content-center">
                    <a class="btn btn-sm btn-outline-secondary"
                       href="{{ path('app_service_medical_show', {'id': s.id}) }}">
                      Voir
                    </a>

                    <button type="button"
                            class="btn btn-sm btn-outline-secondary js-edit-service"
                            title="Modifier"
                            data-bs-toggle="modal"
                            data-bs-target="#editServiceMedicalModal"
                            data-url="{{ path('app_service_medical_edit', {'id': s.id}) }}">
                      Modifier
                    </button>
                  </div>
                </td>
              </tr>
            {% else %}
              <tr>
                <td colspan="3" class="text-muted">Aucun service médical enregistré.</td>
              </tr>
            {% endfor %}
            </tbody>

          </table>
        </div>
      </div>
    </div>

  </div>
</div>

{# =========================
   MODAL EDIT SERVICE MEDICAL (AJAX)
========================= #}
<div class="modal fade" id="editServiceMedicalModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-scrollable">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title">
          <i class="ri-pencil-fill me-1"></i> Modifier Service Médical
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body">
        <div class="text-center py-4" id="editServiceMedicalLoader">
          <div class="spinner-border" role="status" aria-hidden="true"></div>
          <div class="mt-2 text-muted">Chargement...</div>
        </div>

        <div id="editServiceMedicalBody" class="d-none"></div>
      </div>

    </div>
  </div>
</div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script>
    (function () {
      const modalEl = document.getElementById('editServiceMedicalModal');
      if (!modalEl) return;

      const loader = document.getElementById('editServiceMedicalLoader');
      const body = document.getElementById('editServiceMedicalBody');

      async function loadEditForm(url) {
        loader.classList.remove('d-none');
        body.classList.add('d-none');
        body.innerHTML = '';

        const res = await fetch(url, { headers: { 'X-Requested-With': 'XMLHttpRequest' } });
        const html = await res.text();

        body.innerHTML = html;
        loader.classList.add('d-none');
        body.classList.remove('d-none');

        const form = body.querySelector('form');
        if (!form) return;

        form.addEventListener('submit', async (ev) => {
          ev.preventDefault();

          const formData = new FormData(form);
          const submitUrl = form.getAttribute('action') || url;

          

          const submitRes = await fetch(submitUrl, {
            method: 'POST',
            body: formData,
            headers: { 'X-Requested-With': 'XMLHttpRequest' }
          });

          const contentType = submitRes.headers.get('content-type') || '';

          if (contentType.includes('application/json')) {
            const json = await submitRes.json();
            if (json.success) {
              bootstrap.Modal.getInstance(modalEl).hide();
              window.location.reload();
              return;
            }
          }

          // HTML avec erreurs
          const submitHtml = await submitRes.text();
          body.innerHTML = submitHtml;
        });
      }

      document.addEventListener('click', (e) => {
        const btn = e.target.closest('.js-edit-service');
        if (!btn) return;

        const url = btn.getAttribute('data-url');
        loadEditForm(url).catch(() => {
          loader.classList.add('d-none');
          body.classList.remove('d-none');
          body.innerHTML = '<div class="alert alert-danger mb-0">Impossible de charger le formulaire.</div>';
        });
      });

      modalEl.addEventListener('hidden.bs.modal', () => {
        loader.classList.remove('d-none');
        body.classList.add('d-none');
        body.innerHTML = '';
      });
    })();
  </script>
{% endblock %}