{% extends 'base.html.twig' %}

{% block title %}Patients{% endblock %}

{% block body %}
<div class="row">
  <div class="col-12">

    <div class="card card-primary">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="card-title mb-0">Liste des Patients</h3>

        <button type="button"
                class="btn btn-success"
                data-bs-toggle="modal"
                data-bs-target="#addPatientModal">
          <i class="fa fa-plus"></i> Nouveau patient
        </button>
      </div>

      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered align-middle text-center mb-0">
            <thead class="table-light">
              <tr>
                <th>Code</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Date naissance</th>
                <th>Sexe</th>
                <th>Téléphone</th>
                <th>Groupe sanguin</th>
                <th>Adresse</th>
                <th>Créé le</th>
                <th>Actions</th>
              </tr>
            </thead>

            <tbody>
            {% for patient in patients %}
              <tr>
                <td>{{ patient.code }}</td>
                <td>{{ patient.nom }}</td>
                <td>{{ patient.prenom }}</td>
                <td>{{ patient.dateNaissance ? patient.dateNaissance|date('Y-m-d') : '-' }}</td>
                <td>{{ patient.sexe }}</td>
                <td>{{ patient.telephone }}</td>
                <td>{{ patient.groupeSanguin }}</td>
                <td class="text-start">
                    {{ patient.adresse|u.truncate(40, '…', false) }}
                </td>
                <td>{{ patient.createdAt ? patient.createdAt|date('Y-m-d H:i') : '-' }}</td>

               <td>
                <div class="btn-group btn-group-sm" role="group" aria-label="Actions patient">
                    <a class="btn btn-outline-secondary"
                    title="Voir"
                    href="{{ path('app_patient_show', {'id': patient.id}) }}">
                    <i class="fa fa-eye"></i>
                    Voir
                    </a>

                    <button type="button"
                            class="btn btn-outline-secondary js-edit-patient"
                            title="Modifier"
                            data-bs-toggle="modal"
                            data-bs-target="#editPatientModal"
                            data-url="{{ path('app_patient_edit', {'id': patient.id}) }}">
                    <i class="ri-pencil-fill"></i>
                    </button>
                </div>
              </tr>
            {% else %}
              <tr>
                <td colspan="10" class="text-muted">Aucun patient enregistré.</td>
              </tr>
            {% endfor %}
            </tbody>

          </table>
        </div>
      </div>
    </div>

  </div>
</div>

{# 
    Modale de création d'un patient
    --------------------------------
    - Utilise le même formulaire que pour l'édition, mais sans données pré-remplies.
    - Le formulaire est soumis via AJAX pour éviter un rechargement complet de la page.

#}

<div class="modal fade" id="addPatientModal" tabindex="-1">
  <div class="modal-dialog modal-lg modal-dialog-scrollable">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title">Nouveau Patient</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body">
        {{ form_start(form, {'attr': {'id': 'PatientForm'}}) }}

        <div class="row g-3">
          <div class="col-md-6">{{ form_row(form.nom) }}</div>
          <div class="col-md-6">{{ form_row(form.prenom) }}</div>

          <div class="col-md-6">{{ form_row(form.dateNaissance) }}</div>
          <div class="col-md-6">{{ form_row(form.sexe) }}</div>

          <div class="col-md-6">{{ form_row(form.telephone) }}</div>
          <div class="col-md-6">{{ form_row(form.code) }}</div>

          <div class="col-md-6">{{ form_row(form.groupeSanguin) }}</div>
          <div class="col-md-6">{{ form_row(form.adresse) }}</div>
        </div>

        <div class="d-flex justify-content-end mt-4">
          <button class="btn btn-success">Enregistrer</button>
        </div>

        {{ form_end(form) }}
      </div>

    </div>
  </div>
</div>

{# Modale édition patient (contenu chargé en AJAX) #}
<div class="modal fade" id="editPatientModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-scrollable">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title">
          <i class="fa fa-pen me-1"></i> Modifier Patient
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body">
        <div class="text-center py-4" id="editPatientLoader">
          <div class="spinner-border" role="status" aria-hidden="true"></div>
          <div class="mt-2 text-muted">Chargement...</div>
        </div>

        <div id="editPatientModalBody" class="d-none"></div>
      </div>

    </div>
  </div>
</div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script>
    (function () {
      const editModalEl = document.getElementById('editPatientModal');
      const loader = document.getElementById('editPatientLoader');
      const body = document.getElementById('editPatientModalBody');

      async function loadEditForm(url) {
        loader.classList.remove('d-none');
        body.classList.add('d-none');
        body.innerHTML = '';

        const res = await fetch(url, { headers: { 'X-Requested-With': 'XMLHttpRequest' } });
        const html = await res.text();

        body.innerHTML = html;
        loader.classList.add('d-none');
        body.classList.remove('d-none');

        const form = body.querySelector('form');
        if (!form) return;

        form.addEventListener('submit', async (ev) => {
          ev.preventDefault();

          const formData = new FormData(form);
          const submitUrl = form.getAttribute('action') || url;
          const method = (form.getAttribute('method') || 'POST').toUpperCase();

          const submitRes = await fetch(submitUrl, {
            method,
            body: formData,
            headers: { 'X-Requested-With': 'XMLHttpRequest' }
          });

          const contentType = submitRes.headers.get('content-type') || '';

          if (contentType.includes('application/json')) {
            const json = await submitRes.json();
            if (json.success) {
              bootstrap.Modal.getInstance(editModalEl).hide();
              window.location.reload();
              return;
            }
          }

          // sinon HTML (souvent avec erreurs)
          const submitHtml = await submitRes.text();
          body.innerHTML = submitHtml;
        });
      }

      document.addEventListener('click', (e) => {
        const btn = e.target.closest('.js-edit-patient');
        if (!btn) return;
        const url = btn.getAttribute('data-url');
        loadEditForm(url).catch(() => {
          loader.classList.add('d-none');
          body.classList.remove('d-none');
          body.innerHTML = '<div class="alert alert-danger mb-0">Impossible de charger le formulaire.</div>';
        });
      });

      editModalEl?.addEventListener('hidden.bs.modal', () => {
        loader.classList.remove('d-none');
        body.classList.add('d-none');
        body.innerHTML = '';
      });
    })();
  </script>
{% endblock %}