{{ form_start(form, {
  'action': path('app_rendez_vous_edit', {id: form.vars.value.id}),
  'attr': {'id': 'RdvEditForm'}
}) }}

<div class="row g-3">
  <div class="col-md-6">
    {{ form_row(form.patient) }}
  </div>

  {% if form.medecin is defined %}
  <div class="col-md-6">
    {{ form_row(form.medecin) }}
  </div>
  {% endif %}

  <div class="col-md-6">
    {% if form.dateHeure is defined %}
      {{ form_row(form.dateHeure) }}
    {% else %}
      {{ form_row(form.dateRendezVous) }}
    {% endif %}
  </div>

  <div class="col-md-6">
    {{ form_row(form.statut) }}
  </div>

  {% if form.motif is defined %}
  <div class="col-12">
    {{ form_row(form.motif) }}
  </div>
  {% endif %}
</div>

<div class="d-flex justify-content-end mt-4 gap-2">
  <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Annuler</button>
  <button class="btn btn-primary">Mettre Ã  jour</button>
</div>

{{ form_end(form) }}