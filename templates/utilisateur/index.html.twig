{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
<div class="row">
  <div class="col-12">

    <div class="card card-primary">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="card-title mb-0">Liste des Utilisateurs</h3>

        <button type="button"
                class="btn btn-success"
                data-bs-toggle="modal"
                data-bs-target="#addUtilisateurModal">
          <i class="fa fa-plus"></i> Nouvel utilisateur
        </button>
      </div>

      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered align-middle text-center mb-0">
            <thead class="table-light">
              <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Username</th>
                <th>Statut</th>
                <th>Rôles</th>
                <th>Service</th>
                <th>Créé le</th>
                <th style="width: 160px;">Actions</th>
              </tr>
            </thead>

            <tbody>
            {% for u in utilisateurs %}
              <tr>
                <td>{{ u.nom }}</td>
                <td>{{ u.prenom }}</td>
                <td>{{ u.username }}</td>

                <td>
                  {# Enum (recommandé) : u.statut.label() / u.statut.value
                     Bool (ancien) : u.actif ? 'Actif' : 'Inactif'
                  #}
                  {% if u.statut is defined and u.statut %}
                    {# si Enum #}
                    {% if u.statut.label is defined %}
                      <span class="badge bg-success-subtle text-success border border-success-subtle">
                        {{ u.statut.label() }}
                      </span>
                    {% else %}
                      <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle">
                        {{ u.statut }}
                      </span>
                    {% endif %}
                  {% else %}
                    <span class="text-muted">-</span>
                  {% endif %}
                </td>

                <td class="text-start">
                  {% set roles = u.roles ?? [] %}
                  {% if roles|length > 0 %}
                    {# Affichage compact des rôles #}
                    {% for r in roles %}
                      <span class="badge bg-light text-dark border me-1 mb-1">{{ r }}</span>
                    {% endfor %}
                  {% else %}
                    <span class="text-muted">-</span>
                  {% endif %}
                </td>

                <td>
                  {% if u.serviceMedical %}
                    {# adapte libelle/nom selon ton entité #}
                    {{ u.serviceMedical.libelle ?? u.serviceMedical.nom ?? u.serviceMedical.id }}
                  {% else %}
                    <span class="text-muted">-</span>
                  {% endif %}
                </td>

                <td>{{ u.createdAt ? u.createdAt|date('Y-m-d H:i') : '-' }}</td>

                <td>
                  <div class="d-flex gap-2 justify-content-center">
                    <a class="btn btn-sm btn-outline-secondary"
                       href="{{ path('app_utilisateur_show', {'id': u.id}) }}">
                      Voir
                    </a>

                                    <button type="button"
                        class="btn btn-sm btn-outline-secondary js-edit-utilisateur"
                        title="Modifier"
                        data-bs-toggle="modal"
                        data-bs-target="#editUtilisateurModal"
                        data-url="{{ path('app_utilisateur_edit', {'id': u.id}) }}">
                  Modifier
                </button>
                  </div>
                </td>
              </tr>
            {% else %}
              <tr>
                <td colspan="8" class="text-muted">Aucun utilisateur enregistré.</td>
              </tr>
            {% endfor %}
            </tbody>

          </table>
        </div>
      </div>
    </div>

  </div>
</div>

{# =========================
   MODAL AJOUT UTILISATEUR
========================= #}
<div class="modal fade" id="addUtilisateurModal" tabindex="-1">
  <div class="modal-dialog modal-lg modal-dialog-scrollable">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title">Nouvel Utilisateur</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body">
        {{ form_start(form, {'attr': {'id': 'UtilisateurForm'}}) }}

        <div class="row g-3">
          <div class="col-md-6">{{ form_row(form.nom) }}</div>
          <div class="col-md-6">{{ form_row(form.prenom) }}</div>

          <div class="col-md-6">{{ form_row(form.username) }}</div>
          <div class="col-md-6">
            {# si tu as implémenté plainPassword (recommandé) #}
            {% if form.plainPassword is defined %}
              {{ form_row(form.plainPassword) }}
            {% else %}
              {{ form_row(form.hashPassword) }}
            {% endif %}
          </div>

          <div class="col-md-6">{{ form_row(form.statut) }}</div>

          <div class="col-md-6">
            {# roles multiple/expanded => occupe souvent plus d’espace #}
            {{ form_row(form.roles) }}
          </div>

          <div class="col-md-12">{{ form_row(form.serviceMedical) }}</div>
        </div>

        <div class="d-flex justify-content-end mt-4">
          <button class="btn btn-success">Enregistrer</button>
        </div>

        {{ form_end(form) }}
      </div>

    </div>
  </div>
</div>

{# =========================
   MODAL EDIT UTILISATEUR (AJAX)
========================= #}
<div class="modal fade" id="editUtilisateurModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-scrollable">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title">
          <i class="fa fa-pen me-1"></i> Modifier Utilisateur
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body">
        <div class="text-center py-4" id="editUtilisateurLoader">
          <div class="spinner-border" role="status" aria-hidden="true"></div>
          <div class="mt-2 text-muted">Chargement...</div>
        </div>

        <div id="editUtilisateurModalBody" class="d-none"></div>
      </div>

    </div>
  </div>
</div>

{% endblock %}
{% block javascripts %}
  {{ parent() }}
  <script>
    (function () {
      const editModalEl = document.getElementById('editUtilisateurModal');
      if (!editModalEl) return;

      const loader = document.getElementById('editUtilisateurLoader');
      const body = document.getElementById('editUtilisateurModalBody');

      async function loadEditForm(url) {
        loader.classList.remove('d-none');
        body.classList.add('d-none');
        body.innerHTML = '';

        const res = await fetch(url, { headers: { 'X-Requested-With': 'XMLHttpRequest' } });
        const html = await res.text();

        body.innerHTML = html;
        loader.classList.add('d-none');
        body.classList.remove('d-none');

        const form = body.querySelector('form');
        if (!form) return;

        form.addEventListener('submit', async (ev) => {
          ev.preventDefault();

          const formData = new FormData(form);
          const submitUrl = form.getAttribute('action') || url;
          const method = (form.getAttribute('method') || 'POST').toUpperCase();

          const submitRes = await fetch(submitUrl, {
            method,
            body: formData,
            headers: { 'X-Requested-With': 'XMLHttpRequest' }
          });

          const contentType = submitRes.headers.get('content-type') || '';

          if (contentType.includes('application/json')) {
            const json = await submitRes.json();
            if (json.success) {
              bootstrap.Modal.getInstance(editModalEl).hide();
              window.location.reload();
              return;
            }
          }

          // sinon HTML (form avec erreurs)
          const submitHtml = await submitRes.text();
          body.innerHTML = submitHtml;
        });
      }

      document.addEventListener('click', (e) => {
        const btn = e.target.closest('.js-edit-utilisateur');
        if (!btn) return;

        const url = btn.getAttribute('data-url');
        loadEditForm(url).catch(() => {
          loader.classList.add('d-none');
          body.classList.remove('d-none');
          body.innerHTML = '<div class="alert alert-danger mb-0">Impossible de charger le formulaire.</div>';
        });
      });

      editModalEl.addEventListener('hidden.bs.modal', () => {
        loader.classList.remove('d-none');
        body.classList.add('d-none');
        body.innerHTML = '';
      });
    })();
  </script>
{% endblock %}